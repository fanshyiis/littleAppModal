<!--pages/koalaTeacher/result/result.wxml-->
<view class='result' wx:if="{{!ifList}}">
  <view class='card'>
    <image class='ok' src='../../../img/teacher/koala_ok.png'></image>
  </view>
  <view class='bottom_btn clear'>
    <view class='btn_back'>返回首页</view>
    <view class='btn_look'>查看发布</view>
  </view>
</view>

<view class='result' wx:else>
  <canvas canvas-id="myCanvas" width="1000" height="800"  class='canvas' style="border: 1px solid;"/>
  <view class='card2'>
    <view class='title'>今日作业</view>
    <view class='b_s_content'>
        <view class='b_s_dot'></view>
        <view class='b_s_1'>阶梯阅读作业</view>
        <view class='b_s_2'>共<text class='green'>3</text>篇</view>
    </view>
    <view class='b_s_content'>
        <view class='b_s_dot2'></view>
        <view class='b_s_1'>课外书作业</view>
        <view class='b_s_2'>调皮的日子</view>
        <view class='b_s_3'>作业时间：2018.3.15-2018.4.15</view>
    </view>
  </view>
  <view class='btn'>
      <button class='btn_share' open-type="share">分享今日作业</button>
  </view>
  <view class='bottom_btn clear'>
    <view class='btn_back'>返回首页</view>
    <view class='btn_back2'>查看发布</view>
  </view>
</view>
