/* pages/koalaParent/index/index.wxss */
page{
  background: #ebebeb;
}
.main{
  background: #ebebeb;
  padding: 24rpx;
}
.card{
  width:100%;
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}
.card-title{
  padding: 30rpx 0;
  margin: 0 36rpx;
  border-bottom: 1px solid #ebebeb;
  color: #333;
  font-size: 34rpx; 
}
.card-content{
  padding: 40rpx 36rpx;
  color: #333;
  font-size: 30rpx; 
}
.card-content-index{
  line-height: 50rpx;
}
.card-content-step{
  margin: 40rpx 0;
}
.card-content-step-lt{
  float: left;
}
.card-content-step-rt{
  float: right;
  font-size: 30rpx;
  color: #ffae00;
}
.card-recommend-lt{
  float: left;
}
.card-recommend-lt-time{
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}
.card-recommend-rt{
  float: right;
  width: 53rpx;
  height: 53rpx;
  margin: 10rpx;
}
.card-recommend-rt image{
  width: 100%;
  height: 100%;
}
.card-bottom{
  padding: 30rpx 0;
  margin: 0 36rpx;
  border-top: 1px solid #ebebeb;
  color: #999;
  font-size: 24rpx;
}
.card-bottom .card-bottom-lt{
  float: left;
  margin-left: 10rpx;
}
.card-bottom .card-bottom-rt{
  float: right;
  width: 40rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.card-bottom .card-bottom-rt image{
  width: 100%;
  height: 100%;
}
.orange{
  color: #ffae00;
  font-size: 40rpx;
}
.blue{
  color: #20a3ff;
}
.modal-info{
  background: #fff; 
  border-radius: 24rpx;
  padding: 41rpx 0 41rpx 52rpx;
  margin-bottom: 70rpx;
}
.head-img{
  width: 104rpx;
  height: 104rpx;
	box-shadow: 0px 12px 32px 0px rgba(42, 43, 43, 0.2);
  border: 6rpx solid #fff;
  border-radius: 50%;
  float: left;
}
.head-img image{
  width: 100%;
  height: 100%;
}
.info{
  float: left;
  font-size: 30rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
  margin-left: 22rpx;
  color: #666;
}
.info text{
  color: #20a3ff;
  font-size: 34rpx;
}
.open-info{
  float: right;
  margin: 34rpx 56rpx 0 0;
}
.open-info image{
  width: 18rpx;
	height: 33rpx;
}
#progress{
  margin: 60rpx 0;
  position: relative;
  top: 0;
  left: 0;
}
.er-index{
  position: absolute;
  top: -34rpx;
  color: #666;
  font-size: 24rpx;
}
.point{
  position: absolute;
  top: -24rpx;
  left: 50%;
  width: 120rpx;
  text-align: center;
  color: #20a3ff;
}
.point-img{
  width: 26rpx;
  height: 37rpx;
  margin: 0 auto;
}
.point-img image{
  width: 100%;
  height: 100%;
}