.main{
  padding: 200rpx 32rpx 0;
  font-size: 28rpx;
}

#modal{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4)
}
.modal-content{
	width: 542rpx;
	height: 240rpx;
	background-color: #faf8f9;
	border-radius: 20rpx;
  margin: 50% auto 0;
}
.modal-content .modal-text{
  height: 149rpx;
  line-height: 149rpx;
  text-align: center;
  color: #333;
  border-bottom: 1rpx solid #ccc;
}
.modal-content .modal-button{
  text-align: center;
  line-height: 88rpx;
  font-size: 36rpx;
  color: #20a3ff;
}

.section{
  border-bottom: 1px solid #ebebeb;
  padding: 40rpx 0 30rpx;
}

.section text, input{
  float: left;
}

input{
  width: 500rpx;
  margin: 0rpx 60rpx 0 40rpx;
  color: #20a3ff;
  font-size: 36rpx;
}

.close{
  width: 30rpx;
  height: 30rpx;
}

.login{
  width: 682rpx;
	height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  text-align: center;
  font-size: 36rpx;
	background-color: #20a3ff;
	border-radius: 45rpx;
  margin-top: 244rpx;
}

.new{
  text-align: right;
  color: #20a3ff;
  margin-top: 30rpx;
}

.tel{
  font-size: 30rpx;
